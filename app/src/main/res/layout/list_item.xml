<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/listDateTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listTitleTextView"
            android:layout_toEndOf="@+id/listImageView"
            android:layout_toRightOf="@+id/listImageView"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/listTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/listImageView"
            android:layout_toRightOf="@+id/listImageView"
            android:text="Episode Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/listImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/listDateTitleTextView"
            android:layout_toEndOf="@+id/listImageView"
            android:layout_toRightOf="@+id/listImageView"
            android:background="@android:color/darker_gray"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/playTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:text="@string/playNow" />

    </RelativeLayout>

</LinearLayout>